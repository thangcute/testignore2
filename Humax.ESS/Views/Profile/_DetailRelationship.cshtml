                .Disabled(false)
                .ReadOnly(true)
            );

        items.AddSimpleFor(m => m.NgheNghiepHienNay)
            .ColSpan(6)
            .Label(e => e
                .Text("Nghề nghiệp")
            )
            .Editor(e => e
                .TextBox()
                .Placeholder("Nghề nghiệp hiện nay")
                .Width("100%")
                .Disabled(false)
                .ReadOnly(true)
            );

        items.AddSimpleFor(m => m.MaSoThue)
