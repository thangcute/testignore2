        items.AddSimpleFor(m => m.QuanHe_ChuHo)
            .ColSpan(6)
            .Label(e => e
                .Text("QH Chủ hộ")
            )
            .Editor(e => e
                .SelectBox()
                .Placeholder("Quan Hệ chủ hộ")
                .DataSource(new JS("jsQuanHe"))
                .SearchEnabled(true)
                .ValueExpr("Id")
                .DisplayExpr("Name")
                .Width("100%")
                .ReadOnly(true)
