            )
            .Editor(e => e
                .SelectBox()
                .Placeholder("Loại giấy tờ")
                .DataSource(new JS("jsLoaiGiayTo"))
                .SearchEnabled(true)
                .ValueExpr("Id")
                .DisplayExpr("Name")
                .Value(Model.LoaiGiayToID)
                .Width("100%")
                .ReadOnly(true)
