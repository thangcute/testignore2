@using Microsoft.AspNetCore.Mvc.Localization
@using Humax.ESS.Models.Profile.Relationship
@model RelationshipModel
@inject IViewLocalizer T

@(Html.DevExtreme().Form<RelationshipModel>()
    .ShowValidationSummary(false)
    .ID("form")
    .ColCount(12)
    .Items(items => {
        items.AddSimpleFor(m => m.QTQuanHeGiaDinhID)
                .ColSpan(12)
                .Label(l => l.Visible(false))
                .CssClass("hidden-control");

        items.AddSimpleFor(m => m.HoTen)
                        .ColSpan(12)
                        .Label(e => e
                            .Text("Họ tên")
                        )
                        .Editor(e => e
                            .TextBox()
                            .Placeholder("Họ tên Nhân thân")
                            .Width("100%")
                            .Disabled(false)
                            .ReadOnly(true)
                        );

        items.AddSimpleFor(m => m.QuanHe)
            .ColSpan(6)
            .Label(e => e
                .Text("Quan hệ")
            )
            .Editor(e => e
                .SelectBox()
                .DataSource(new JS("jsQuanHe"))
                .SearchEnabled(true)
                .ValueExpr("Id")
                .DisplayExpr("Name")
                //.OnValueChanged("jsQuanHe_changed")
                .Placeholder("Quan hệ")
                .Width("100%")
                .ReadOnly(true)
            );

        items.AddSimpleFor(m => m.GioiTinh)
            .ColSpan(6)
            .Label(e => e
                .Text("Giới tính")
            )
            .CssClass("dev-radio-control")
            .Editor(e => e
                .RadioGroup()
                .DataSource(new JS("jsGioiTinh"))
                .ValueExpr("Id")
                .DisplayExpr("Name")
                .Layout(Orientation.Horizontal)
                .Width("100%")
                .ReadOnly(true)
            );

        items.AddSimpleFor(m => m.NgaySinh)
            .ColSpan(6)
            .Label(e => e
                .Text("Ngày sinh")
            )
            .Editor(e => e
                .DateBox()
                .Width("100%")
                .DisplayFormat("dd-MM-yyyy")
                .ReadOnly(true)
            )
            .IsRequired(false);

        items.AddSimpleFor(m => m.CMND)
            .ColSpan(6)
            .Label(e => e
                .Text("Số CMT/TCC")
            )
            .Editor(e => e
                .TextBox()
                .Placeholder("Số CMT/TCC")
                .Width("100%")
                .Disabled(false)
                .ReadOnly(true)
